            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".AddToInventory"
            android:windowSoftInputMode="stateAlwaysHidden">


        </activity>
        <activity
            android:name=".Stage3"
            android:windowSoftInputMode="stateAlwaysHidden">



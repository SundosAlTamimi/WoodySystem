<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w10"
    tools:context=".stage_one.StageOne">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_black_dark"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/stage1_accept_info"
            android:layout_width="@dimen/stage3_views"
            android:layout_height="@dimen/stage3_views2"
            android:layout_marginStart="@dimen/stage1_p_margin_start"
            android:layout_marginLeft="@dimen/stage1_p_margin_start"
            android:layout_marginTop="@dimen/stage1_p_margin2_top"
            android:background="@drawable/border_background"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stage1_new_raw">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/acceptance_info"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="@string/acceptance_info"
                android:textColor="@color/orange"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stage1_new_raw"
            android:layout_width="@dimen/stage3_views"
            android:layout_height="@dimen/stage3_views2"
            android:layout_marginStart="@dimen/stage1_p_margin_start"
            android:layout_marginLeft="@dimen/stage1_p_margin_start"
            android:layout_marginTop="@dimen/stage1_p_margin_top"
            android:background="@drawable/frame_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/wbundlereal"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="15dp"
                android:text="@string/enter_inventory"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stage1_generate_barcode"
            android:layout_width="@dimen/stage3_views"
            android:layout_height="@dimen/stage3_views2"
            android:layout_marginStart="@dimen/stage1_p_margin_start"
            android:layout_marginLeft="@dimen/stage1_p_margin_start"
            android:layout_marginTop="@dimen/stage1_p_margin2_top"
            android:background="@drawable/frame_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stage1_accept_info">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/barcode"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="@string/generate_barcode"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
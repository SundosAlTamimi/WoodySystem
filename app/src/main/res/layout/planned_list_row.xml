<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/serial"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.4"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="1"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/cust"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="cust"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pl"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="pl"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/dest"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="dest"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/order_no"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="order no"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/supplier"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="sup"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="grade"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/thick"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="thick"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/width"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="width"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/length"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="length"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pieces"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="pieces"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/copies"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="copies"
        android:paddingVertical="7dp"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/is_exist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.7"
        android:background="@color/light_orange"
        android:gravity="center"
        android:textColor="@color/gray_dark_one"
        android:textColorHint="#474444"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.45"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="e"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/ic_menu_manage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.45"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="e"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/ic_menu_delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.45"
        android:background="@color/light_orange"
        android:gravity="center"
        android:hint="e"
        android:paddingHorizontal="7dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/actionModeCopyDrawable" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w10"
    tools:context=".stage_two.StageTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_black_dark"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:id="@+id/stage2_planned_packingList"
                android:layout_width="@dimen/stage3_views"
                android:layout_height="@dimen/stage3_views2"
                android:layout_marginTop="@dimen/stage3_p_margin_top"
                android:background="@drawable/frame_shape"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_post_add"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal"
                    android:text="Planned packing list"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stage2_reports"
                android:layout_width="@dimen/stage3_views"
                android:layout_height="@dimen/stage3_views2"
                android:layout_marginTop="@dimen/stage3_p_margin2_top"
                android:background="@drawable/border_background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stage3_enter_inventory">


            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/real_report"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal"
                    android:text="@string/reports"
                    android:textColor="@color/orange"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w10"
    tools:context=".Stage3">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_black_dark"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431">

        <LinearLayout
            android:id="@+id/stage3_enter_inventory"
            android:layout_width="@dimen/stage3_views"
            android:layout_height="@dimen/stage3_views2"
            android:layout_marginTop="172dp"
            android:background="@drawable/frame_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/wbundlereal"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="15dp"
                android:text="@string/enter_inventory"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stage3_loading_order"
            android:layout_width="@dimen/stage3_views"
            android:layout_height="@dimen/stage3_views2"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_background"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stage3_enter_inventory">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/container3"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="15dp"
                android:text="@string/loading_order"
                android:textColor="@color/orange"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stage3_reports"
            android:layout_width="@dimen/stage3_views"
            android:layout_height="@dimen/stage3_views2"
            android:layout_marginTop="20dp"
            android:background="@drawable/frame_shape"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stage3_loading_order">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/real_report"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="15dp"
                android:text="@string/reports"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
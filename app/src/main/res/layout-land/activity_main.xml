<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/wooddecor"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/alpha_black_dark"
        >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/s1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="692dp"
                android:layout_marginRight="692dp"
                android:layout_marginBottom="181dp"
                android:background="@drawable/border_background"
                android:text="@string/stage1"
                android:fontFamily="serif"
                android:textColor="@color/orange"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/s2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="394dp"
                android:layout_marginRight="394dp"
                android:layout_marginBottom="163dp"
                android:background="@drawable/frame_shape"
                android:text="@string/stage2"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/s3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="148dp"
                android:layout_marginRight="148dp"
                android:layout_marginBottom="188dp"
                android:background="@drawable/border_background"
                android:text="@string/stage3"
                android:fontFamily="serif"
                android:textColor="@color/orange"
                android:textSize="30sp" />


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
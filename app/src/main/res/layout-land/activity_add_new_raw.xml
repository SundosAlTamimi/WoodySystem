<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooddecor"
    tools:context=".stage_one.AddNewRaw">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_black_dark"
        >

        <LinearLayout
            android:id="@+id/addNewRaw_linear_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addNewRaw_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:drawableStart="@drawable/axe"
                android:drawableLeft="@drawable/axe"
                android:drawablePadding="10dp"
                android:gravity="start"
                android:text="@string/new_raw"
                android:fontFamily="serif"
                android:textColor="@color/orange"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addNewRaw_add_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_add_circle_24dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="80dp"
                android:paddingLeft="80dp"
                android:paddingEnd="80dp"
                android:paddingRight="80dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addNewRaw_linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addNewRaw_linear_header">

            <LinearLayout
                android:id="@+id/mar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/addNewRaw_linear_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_with_corner"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/supplier_no"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/addNewRaw_search_supplier"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="6"
                        android:gravity="start|left"
                        android:hint="@string/search"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/addNewRaw_add_supplier"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="0"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:drawableStart="@drawable/ic_person_add_24dp"
                        android:drawableLeft="@drawable/ic_person_add_24dp"
                        android:background="@drawable/frame_shape"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addNewRaw_linear_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_with_corner"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/thickness"
                        android:fontFamily="serif"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/addNewRaw_thickness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2.5"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@id/addNewRaw_width" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addNewRaw_linear_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_with_corner"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:text="@string/width"
                        android:fontFamily="serif"/>

                    <EditText
                        android:id="@+id/addNewRaw_width"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2.5"
                        android:nextFocusDown="@id/addNewRaw_length"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/addNewRaw_linear_five"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_with_corner"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/length"
                        android:fontFamily="serif"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/addNewRaw_length"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2.5"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@id/addNewRaw_no_of_pieces" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addNewRaw_linear_seven"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_with_corner"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no_of_pieces"
                        android:fontFamily="serif"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/addNewRaw_no_of_pieces"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2.5"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:nextFocusDown="@id/addNewRaw_no_of_bundles" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addNewRaw_linear_eight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_with_corner"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no_bundle"
                        android:fontFamily="serif"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/addNewRaw_no_of_bundles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addNewRaw_table_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/alpha_black"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addNewRaw_linearLayout2"
            app:layout_constraintVertical_bias="0.0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_orange_2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/supplier_no"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/raw_thickness"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/width"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/length"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no_of_pieces"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/no_bundle"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </TableRow>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="365dp"
                >

                <TableLayout
                    android:id="@+id/addNewRaw_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp">
                </TableLayout>

            </ScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/light_orange_2"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
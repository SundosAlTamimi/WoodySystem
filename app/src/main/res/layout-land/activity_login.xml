<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooddecor"
    tools:context=".LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_black_dark">

        <ImageView
            android:id="@+id/login_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_settings_orange_24dp"
            android:layout_gravity="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/orange"
            android:textSize="40sp"
            android:fontFamily="serif" />

        <TextView
            style="@style/AppTheme"
            android:id="@+id/ggggg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/login_logo"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="@string/version"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="506dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/login_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginHorizontal="200dp"
            android:background="@drawable/alpha_frame"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"/>

            <TextView
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:drawableStart="@drawable/ic_perm_identity_orange_24dp"
                android:drawableLeft="@drawable/ic_perm_identity_orange_24dp"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:text="@string/username"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:fontFamily="serif"
                android:nextFocusDown="@id/login_password"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/white" />

            <TextView
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:drawableStart="@drawable/ic_lock_outline_orange_24dp"
                android:drawableLeft="@drawable/ic_lock_outline_orange_24dp"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:text="@string/password"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:fontFamily="serif"
                android:layout_marginHorizontal="20dp"
                android:inputType="textPassword"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@drawable/frame_shape"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:paddingHorizontal="30dp"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/login_about_developers"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_error_24dp"
            android:drawableLeft="@drawable/ic_error_24dp"
            android:text="@string/about_developers"
            android:fontFamily="serif"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:layout_marginBottom="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"/>

    </LinearLayout>

</FrameLayout>
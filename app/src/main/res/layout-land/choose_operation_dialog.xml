<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="850dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/corner_shape_dark"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_touch_app_24dp"
        android:drawableLeft="@drawable/ic_touch_app_24dp"
        android:drawablePadding="10dp"
        android:fontFamily="serif"
        android:textSize="25sp"
        android:text="@string/action"
        />
    <RadioGroup
        android:id="@+id/choose_operation_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/choose_operation_delete_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:id="@+id/choose_operation_delete_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q1"
                    android:fontFamily="serif"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/choose_operation_delete_bundle_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="TextView"
                    android:fontFamily="serif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/choose_operation_delete_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/choose_operation_delete_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:textColor="@color/orange"
                    />
            </LinearLayout>

        </LinearLayout>

        <RadioButton
            android:id="@+id/choose_operation_edit_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:id="@+id/choose_operation_edit_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
             >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/choose_operation_linear_seven"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/serial_no"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/choose_operation_serial_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:nextFocusDown="@id/choose_operation_thickness"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/choose_operation_linear_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="@string/thickness" />

                        <EditText
                            android:id="@+id/choose_operation_thickness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:nextFocusDown="@id/choose_operation_width"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/choose_operation_linear_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="@string/width" />

                        <EditText
                            android:id="@+id/choose_operation_width"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:nextFocusDown="@id/choose_operation_length"
                            android:ems="10"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/choose_operation_linear_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/length"
                            android:textSize="18sp"
                            android:theme="@style/AppTheme" />

                        <EditText
                            android:id="@+id/choose_operation_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:nextFocusDown="@id/choose_operation_no_of_pieces"
                            android:ems="10"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/choose_operation_linear_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="@string/no_of_pieces" />

                        <EditText
                            android:id="@+id/choose_operation_no_of_pieces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:nextFocusDown="@id/choose_operation_packing_list"
                            android:ems="10"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/choose_operation_linear_nine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:text="@string/p_list" />

                        <EditText
                            android:id="@+id/choose_operation_packing_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="2"
                            android:ems="10"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/choose_operation_linear_five"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="18sp"
                            android:text="@string/grade" />

                        <Spinner
                            android:id="@+id/choose_operation_grade"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="2"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/choose_operation_linear_eight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="18sp"
                            android:text="@string/area" />

                        <Spinner
                            android:id="@+id/choose_operation_area"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="3"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/description_linear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_with_corner"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:text="@string/details"
                            android:textSize="18sp" />

                        <Spinner
                            android:id="@+id/choose_operation_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="2"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/choose_operation_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="serif"
                        android:gravity="start"
                        android:text="Apply"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/choose_operation_edit_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="start"
                        android:text="@string/save"
                        android:textColor="@color/orange"
                        android:textSize="18sp"
                        app:fontFamily="serif" />

                </LinearLayout>
            </LinearLayout>

            <TableLayout
                android:id="@+id/choose_operation_edit_tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

            </TableLayout>

        </LinearLayout>

    </RadioGroup>
</LinearLayout>